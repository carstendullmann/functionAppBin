@model funcApp.Models.FunctionsModel
@{
    ViewBag.Title = "Functions";
}

<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

@using (Html.BeginForm("Edit", "Functions", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.SquareFunctionLowerBound, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.SquareFunctionLowerBound, "{0:0.00}", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SquareFunctionUpperBound, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.SquareFunctionUpperBound, "{0:0.00}", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SquareFunctionInterval, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.SquareFunctionInterval, "{0:0.00}", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Calculate Values" />
        </div>
    </div>

    <!--@Html.DisplayFor(m=>m.Values)-->
    @if(Model.Values != null)
    {
        <h3>Calculated Values</h3>
        <hr />

        @foreach(var valuePair in Model.Values)
        {
            <div id="functionValues" class="form-group">
                <div id="point" class="col-md-offset-2 col-md-1">
                    @valuePair.Item1.ToString("0.00")
                </div>  
                <div id="value" class="col-md-1">
                    @valuePair.Item2.ToString("0.00")
                </div>  
            </div>
        }
    }
}